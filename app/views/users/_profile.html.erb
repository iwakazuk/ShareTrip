<div class="profile">
    <%= image_tag(user.image_name.url, class: "user-box__image image_name", size: "150") do %>
    <h2><%= user.name %></h2>
    <p><%= user.email %></p>
    <% if current_user?(user) %>
        <%= link_to "編集", edit_user_registration_path %>
    <% end %>

    <ul class="user-tabs">
        <li class="active"><%= link_to "投稿", user %></li>
        <li><%= link_to "いいね!", user_likes_path(user) %></li>
    </ul>
</div>