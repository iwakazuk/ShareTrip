<div class="user-canopy" style='background-image: url("<%= user.profile_image.url %>");'>
  <div class="user-box">

  <p class="user-name"><%= user.name %></p>
  <%= render 'users/stats', user: @user %>
  <%= render 'users/follow_form', user: @user %>
  </div>

  <ul class="user-link">
    <li class="user-link__item"><%= link_to "投稿一覧", user %></li>
    <li class="user-link__item"><%= link_to "お気に入り",  user_likes_path(user) %></li>
    <% if current_user?(user) %>
      <li class="user-link__item"><%= link_to "設定", edit_user_registration_path %></li>
    <% end %>
  </ul>
  </div>
