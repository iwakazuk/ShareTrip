<div class="card border-0 col-6 col-sm-6 col-md-4 post-cards" style="width: 100px">
    <%= link_to image_tag(post.image[0].thumb.url, size:"700x700", class:"card-img-top img-fluid"),post %>
        <div class="card-body border-bottom">
            <i class="text-muted float-left">by</i>
            <%= link_to image_tag(post.user.profile_image.url, size:"30x30", class:'avatar-type-circle float-left mr-sm-2 ml-1 d-none d-sm-block'),post.user %>
            <%= link_to post.user.name, post.user, class:"float-left text-dark ml-2 ml-sm-0" %>
            <span class="float-left ml-2 text-muted  d-sm-block d-none"><%= post.created_at.strftime("%m/%d %H:%M") %></span>
  
            <span class="float-right d-none d-sm-block" id="post-<%= post.id %>">
                <%= render partial: '/likes/like_form', locals: { post: post } %>
            </span>
        </div>
</div>

