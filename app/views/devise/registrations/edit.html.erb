<%= javascript_include_tag 'preview_js' %>
<div class="gtco-section">
  <div class="gtco-container">
    <div class="text-center">
      <h2 class="font-weight-bold">アカウント情報</h2>
      <div class="form-group mt-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="avatar_prev">
            <% if current_user.profile_image.present? %>
              <%= image_tag current_user.profile_image.url(:thumb), size: "220x220", class: "profile-image", id:  :js_imgPrev%>
              <div id="profilePreviewInner"></div>
            <% else %>
              <%= image_tag @user.profile_image.url(:thumb), size:"220x220", class:"profile-image",  id:  :js_imgPrev%>
            <% end %>
          </div>
          <div class="field field-profile-image">
            <label class="btn btn-warning" id="prev" onClick="$('#js_presentImg').click()"><span>画像を選択</span>
              <%= f.file_field :profile_image, id:"js_presentImg", accept: 'image/jpeg,image/png', autofocus: true, class:"form-control-file", style: "display:none;"%>
            </label>
          </div>
          
      </div>
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "Name" %>
    </div>

    <div class="form-group">
      <label for="name">Email</label>
      <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder: "Email Address" %>
    </div>

    <div class="form-group">
      <label for="name">新しいパスワード（※変更する場合）</label>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "New Password" %>
    </div>

    <div class="form-group">
      <label for="name">新しいパスワード（再入力）</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "New Password" %>
    </div>

    <div class="form-group">
      <label for="name">現在のパスワード</label>
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder: "Password" %>
    </div>

    <div class="actions mt-5">
      <%= f.submit "変更", class:"btn btn-lg btn-warning" %>
    </div>
  <% end %>
  </div>
</div>
    

    <p class="tac"><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "account-delete-btn" %></p>
    <%= link_to "戻る", :back %>
